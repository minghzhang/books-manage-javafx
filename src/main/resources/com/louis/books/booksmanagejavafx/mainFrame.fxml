<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="750.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.louis.books.booksmanagejavafx.controller.MainFrameController">
    <children>
        <MenuBar>
            <menus>
                <Menu mnemonicParsing="false" text="图书类别管理">
                    <items>
                        <MenuItem fx:id="bookTypeAddMenuItem" mnemonicParsing="false" onAction="#addBookType" text="图书类别添加" />
                        <MenuItem fx:id="bookTypeManageMenuItem" mnemonicParsing="false" onAction="#bookTypeManage" text="图书类别维护" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="图书管理">
                    <items>
                        <MenuItem fx:id="bookAddMenuItem" mnemonicParsing="false" onAction="#bookAdd" text="图书添加" />
                        <MenuItem fx:id="bookManageMenuItem" mnemonicParsing="false" onAction="#bookManage" text="图书维护" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="其他">
                    <items>
                        <MenuItem fx:id="exitMenuItem" mnemonicParsing="false" onAction="#exitMenuItem" text="退出" />
                        <MenuItem fx:id="aboutSoftMenuItem" mnemonicParsing="false" onAction="#aboutSoft" text="关于软件" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <AnchorPane fx:id="mainFrameAnchorPane" layoutX="6.0" layoutY="29.0" prefHeight="366.0" prefWidth="587.0">
         <children>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <ImageView fx:id="mainBookManageImageView" fitHeight="365.0" fitWidth="588.0" pickOnBounds="true" preserveRatio="true" />
               </children>
            </HBox>
         </children></AnchorPane>
    </children>
</AnchorPane>
